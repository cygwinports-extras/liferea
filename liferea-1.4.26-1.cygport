inherit gnome2

DESCRIPTION="GNOME RSS reader"
HOMEPAGE="http://liferea.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"
PATCH_URI="
	mirror://portage/net-news/${PN}/files/${PN}-1.4.23-gecko.patch
	1.4.18-cygwin.patch
"

DIFF_EXCLUDES="liferea"

ACLOCAL_FLAGS="-I m4"
# webkit backend is still experimental in 1.4 branch :-(
CYGCONF_ARGS="
	--enable-gtkhtml2
	--enable-libnotify
	--disable-gecko
	--disable-nm
	--disable-webkit
"
